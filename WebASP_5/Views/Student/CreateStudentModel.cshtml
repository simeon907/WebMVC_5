            @foreach (Subject item in ViewBag.Subjects)
            {
                if (Model != null)
                {
                    <input type="checkbox" name="subjects" value="@item.Id"
                           @(Model.Subjects.Contains(item) ? "checked=\"checked\"" : "") />
                }
